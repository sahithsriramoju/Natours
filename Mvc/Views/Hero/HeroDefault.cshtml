@model SitefinityWebApp.Mvc.Models.Hero.HeroViewModel

<header class="header" style="background-image: linear-gradient(to right bottom, rgba(126,213,111,0.8), rgba(40,180,133,0.8)),url('@Model.ImageUrl');background-image:-webkit-gradient(linear, left top, right bottom, from(rgba(126,213,111,0.8)), to(rgba(40,180,133,0.8))),url('@Model.ImageUrl')">
    <div class="header__logo-box">
        <img src="~/Assets/images/logo-white.png" alt="Logo" class="header__logo">
    </div>
    <div class="header__text-box">
        <h1 class="heading-primary">
            <span class="heading-primary--main">@Model.Title</span>
            <span class="heading-primary--sub">@Model.Subtitle</span>
        </h1>
        <a href="@Model.ButtonLink" class="btn btn--white btn--animated">@Model.ButtonText</a>
    </div>
</header>
