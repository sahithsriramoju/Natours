@using Telerik.Sitefinity.Frontend.Mvc.Helpers

<div class="form-group">
    <div class="row">
        <div class="col-xs-11">
            <label for="Title">Title</label>
            <input class="form-control" type="text" id="Title" ng-model="properties.Title.PropertyValue" />
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-xs-11">
            <label for="Subtitle">Subtitle</label>
            <input class="form-control" type="text" id="Subtitle" ng-model="properties.Subtitle.PropertyValue" />
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-xs-11">
            <label for="ButtonText">Button Text</label>
            <input class="form-control" type="text" id="ButtonText" ng-model="properties.ButtonText.PropertyValue" />
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-xs-11">
            <label for="ButtonLink">Button Link</label>
            <input class="form-control" type="text" id="ButtonLink" ng-model="properties.ButtonLink.PropertyValue" />
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-xs-11">
            <label for="ImageUrl">Choose Image for Background</label>
            <sf-image-field sf-model="properties.ImageId.PropertyValue" sf-provider="properties.ImageProviderName.PropertyValue" sf-deselectable class="sf-Media--info modal-settings"></sf-image-field>
        </div>
    </div>
</div>
